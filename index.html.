<script>
    function openTab(evt, tabId) {
        // Hide all tabs
        var tabContent = document.getElementsByClassName("tab-content");
        for (var i = 0; i < tabContent.length; i++) {
            tabContent[i].classList.remove("active");
        }
        // Remove 'active' class from all buttons
        var tabBtn = document.getElementsByClassName("tab-btn");
        for (var i = 0; i < tabBtn.length; i++) {
            tabBtn[i].classList.remove("active");
        }
        // Show the current tab, and add 'active' class to the button
        document.getElementById(tabId).classList.add("active");
        evt.currentTarget.classList.add("active");
    }

    function celebrateApprove() {
        confetti({
            particleCount: 200,
            spread: 120,
            origin: { y: 0.7 }
        });
        document.getElementById('action-area').style.borderColor = var(--success);
        alert("Authorization Granted! The partnership is active. You‚Äôve made my hope come true, Darshani.");
    }
</script>

